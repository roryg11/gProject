<div class="page-header">
  <%= link_to "New Trip", new_trip_path, class: "btn btn-info pull-right" %>
  <h1>Your Trips</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th> Trip Name </th>
      <th> Date </th>
      <th> Location </th>
      <th> Duration </th>
      <th colspan= "3"></th>
    </tr>
  </thead>
  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%=link_to trip.name, trip %></td>
        <td><%= trip.date_of_trip %></td>
        <td><%= trip.location %></td>
        <td>Still figuring out duration</td>
        <td><%= link_to "Show", trip_path(trip), class: "btn btn-default"%></td>
        <td><%= link_to "Edit", edit_trip_path(trip), class: "btn btn-default" %></td>
        <td><%= link_to "Delete", trip, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
